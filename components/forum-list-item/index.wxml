<view  class='forumSum'>
    <navigator url='../detail/detail?id={{forumSum.id}}' class='navigator-forumSum'>
        <view class='UserName'>
            <view class='UserPic'>
                <image src='{{forumSum.avatarurl}}' class='userTou'></image>
                <view class='user'>{{forumSum.username}}</view>
                <view class='datetime'>{{forumSum.createTime}}</view>
            </view>
        </view>
        <text class="textCms">{{forumSum.content}}</text>
        <view class='viPhoto' wx:if="{{forumSum.photoUrl.length!=0}}">
            <view class='wiPhoto'>

                <swiper indicator-dots='true' autoplay='true' interval='3000' duration='500'>
                    <block wx:for='{{forumSum.photoUrl}}' wx:key=''>
                        <swiper-forumSum >
                            <image src='{{forumSum}}' class='poster'></image>
                        </swiper-forumSum>
                    </block>
                </swiper>


            </view>
        </view>
        <view class='label'>
            <label class='time'><image src='http://p92e5qgqt.bkt.clouddn.com/time.png' class='tmimg'></image>{{forumSum.datetime}} </label>
        </view>
    </navigator>
</view>
